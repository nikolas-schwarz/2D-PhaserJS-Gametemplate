{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"outDir": "./dist/",
		"baseUrl": "./src",
		"allowJs": true,
		"sourceMap": true,
		"importHelpers": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": [
			"node_modules/@types",
			"node_module/phaser/types"
		],
		"types": [
			"phaser",
			"node"
		]
	},
	"include": [
		"src/**/*.ts"
	]
}